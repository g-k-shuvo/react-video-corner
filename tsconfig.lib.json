{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "noEmit": false,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/components/VideoCorner/**/*"
  ],
  "exclude": [
    "src/App.tsx",
    "src/main.tsx",
    "src/index.css",
    "example/**/*",
    "**/*.test.*",
    "**/*.spec.*"
  ]
}
